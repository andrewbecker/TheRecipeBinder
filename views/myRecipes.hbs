{{#if google}}
	{{> googleTracking}}
{{/if}}
<div class="row">
	<h2 class="col-xs-12">{{pageName}}</h2>
</div>
<div class="row">
	{{#if recipes}}
		{{#each recipes}}
		<div class="col-xs-4 col-sm-3 recipe-card">
			{{#if image}}
				<a href="/recipe/view/{{id}}/{{slug}}"><img class="recipe-card-image thumbnail-fit img-responsive" src="/finalUpload/thumbs/{{image}}" alt="{{title}}"></a>
			{{/if}}
			<div class="caption">
				<h3><a href="/recipe/view/{{id}}/{{slug}}">{{title}}</a></h3>
				<p>{{{trimString description}}}</p>
			</div>
		</div>
		{{/each}}
	{{else}}
		<div class="col-lg-12">
			<p>No recipes.  <a href="/recipe/new">Enter a new recipe</a></p>
		</div>
	{{/if}}
</div>