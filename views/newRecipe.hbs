<div class="row">
	<div class="col-xs-12">
		<form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title" class="col-sm-2 control-label">Title</label>
				<div class="col-sm-8">
					<input type="text" name="title" placeholder="Title" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="description" class="col-sm-2 control-label">Description</label>
				<div class="col-sm-8">
					<textarea name="description" id="newDescription" cols="30" rows="5" class="form-control"></textarea>
				</div>
			</div>
			<div class="form-group">
				<label for="ingredients" class="col-sm-2 control-label">Ingredients</label>
				<div class="col-sm-8">
					<textarea name="ingredients" id="newIngredients" cols="30" rows="10" class="form-control"></textarea>
					<span class="help-block">One ingredient per line.</span>
				</div>
			</div>
			<div class="form-group">
				<label for="instructions" class="col-sm-2 control-label">Instructions</label>
				<div class="col-sm-8">
					<textarea name="instructions" id="newInstructions" cols="30" rows="10" class="form-control"></textarea>
					<span class="help-block">One instruction per line. Do not use numbers, bullets, or dashes</span>
				</div>
			</div>
			<div class="form-group">
				<label for="yield" class="col-sm-2 control-label">Servings</label>
				<div class="col-sm-3">
					<input type="text" name="yield" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="prep_time" class="col-sm-2 control-label">Prep time</label>
				<div class="col-sm-2">
					<input type="number" name="prep_time" class="form-control">
					<span class="help-block">In minutes</span>
				</div>
			</div>
			<div class="form-group">
				<label for="cook_time" class="col-sm-2 control-label">Cook time</label>
				<div class="col-sm-2">
					<input type="number" class="form-control" name="cook_time">
					<span class="help-block">In minutes</span>
				</div>
			</div>
			<div class="form-group">
				<label for="categoryId" class="col-sm-2 control-label">Category</label>
				<div class="col-sm-3">
					<select name="categoryId" class="form-control">
						{{#each categories}}
							<option value="{{id}}">{{category}}</option>
						{{/each}}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="image" class="col-sm-2 control-label">Image</label>
				<div class="col-sm-8">
					<input type="file" name="image" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button class="btn btn-primary" type="submit">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>