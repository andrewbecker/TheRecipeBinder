<div class="row">
	<h2 class="col-xs-12">Categories</h2>
</div>
<div class="row">
	<ul>
		{{#each category}}
			<li>{{category}}</li>
		{{/each}}
	</ul>
</div>
<div class="row">
	<h2 class="col-xs-12">Enter new category</h2>
	<form class="form-horizontal col-sm-12" action="/admin/categories" method="post">
		<div class="form-group">
			<div class="col-sm-2">
				<input type="text" name="category" placeholder="Category" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
				<button class="btn btn-primary" type="submit">Submit</button>
			</div>
		</div>
	</form>
</div>